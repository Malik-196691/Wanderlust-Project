<% layout('layouts/broilerplate') %>

<h3 class="new-heading text-center mt-5 mb-4">Create a New Listing</h3>

<div class="row justify-content-center">
  <div class="col-lg-6 col-md-8 col-11">
    <form
      class="new-form needs-validation p-4 shadow-lg rounded"
      enctype="multipart/form-data"
      action="/listings"
      method="post"
      novalidate
    >
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label fw-semibold">Title</label>
        <input
          type="text"
          id="title"
          name="title"
          class="form-control form-control-lg"
          required
        />
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label fw-semibold"
          >Description</label
        >
        <textarea
          id="description"
          name="description"
          rows="3"
          class="form-control form-control-lg"
          required
        ></textarea>
      </div>

      <!-- Category -->
      <div class="mb-3">
        <label for="category" class="form-label fw-semibold">Category</label>
        <select
          id="category"
          name="category"
          class="form-control form-control-lg"
          required
        >
          <option value="" disabled selected>Select a category</option>
          <option value="Trending">Trending</option>
          <option value="Rooms">Rooms</option>
          <option value="Cities">Cities</option>
          <option value="Mountains">Mountains</option>
          <option value="Castles">Castles</option>
          <option value="Pools">Pools</option>
          <option value="Camping">Camping</option>
          <option value="Farms">Farms</option>
          <option value="Arctic">Arctic</option>
          <option value="Beach">Beach</option>
          <option value="Forest">Forest</option>
          <option value="Igloos">Igloos</option>
          <option value="Boat">Boat</option>
          <option value="Desert">Desert</option>
          <option value="Skiing">Skiing</option>
          <option value="Dome">Dome</option>
          <option value="Golf">Golf</option>
          <option value="Vineyard">Vineyard</option>
          <option value="Lake">Lake</option>
          <option value="Eco-friendly">Eco-friendly</option>
          <option value="Tiny-home">Tiny-home</option>
          <option value="Luxury">Luxury</option>
          <option value="Historic">Historic</option>
          <option value="Island">Island</option>
          <option value="Mansion">Mansion</option>
          <option value="Treehouse">Treehouse</option>
          <option value="Yurt">Yurt</option>
          <option value="Container">Container</option>
          <option value="Caravan">Caravan</option>
          <option value="Houseboat">Houseboat</option>
          <option value="Towers">Towers</option>
          <option value="Tropical">Tropical</option>
          <option value="Windy">Windy</option>
          <option value="Snow">Snow</option>
          <option value="Cave">Cave</option>
          <option value="Barns">Barns</option>
        </select>
        <div class="invalid-feedback">Please select a valid category.</div>
      </div>

      <!-- Image -->
      <div class="mb-3">
        <label for="image" class="form-label fw-semibold">Upload Image</label>
        <input
          type="file"
          id="image"
          name="image"
          class="form-control form-control-lg"
          required
        />
      </div>

      <!-- Price -->
      <div class="mb-3">
        <label for="price" class="form-label fw-semibold">Price</label>
        <input
          type="number"
          id="price"
          name="price"
          class="form-control form-control-lg"
          required
        />
      </div>

      <!-- Country -->
      <div class="mb-3">
        <label for="country" class="form-label fw-semibold">Country</label>
        <input
          type="text"
          id="country"
          name="country"
          class="form-control form-control-lg"
          required
        />
      </div>

      <!-- Location -->
      <div class="mb-4">
        <label for="location" class="form-label fw-semibold">Location</label>
        <input
          type="text"
          id="location"
          name="location"
          class="form-control form-control-lg"
          required
        />
      </div>

      <button class="btn btn-primary btn-lg w-100 submit-btn" type="submit">
        Create Listing
      </button>
    </form>
  </div>
</div>
