<% layout('layouts/broilerplate') %>

<h3 style="margin-top: 2rem" class="new-heading">Create a New Listing</h3>
<div class="row justify-content-center">
  <div class="col-8">
    <form
      class="new-form needs-validation"
      enctype="multipart/form-data"
      action="/listings"
      method="post"
      novalidate
    >
      <label for="title" class="form-label">Title:</label>
      <input type="text" id="title" name="title" class="form-control" /><br />

      <label for="description" class="form-label">Description:</label>
      <textarea
        id="description"
        name="description"
        required
        class="form-control"
      ></textarea
      ><br />

      <label for="image" class="form-label">Upload Image:</label>
      <input
        type="file"
        id="image"
        name="image"
        required
        class="form-control"
      />
      <br />

      <label for="price" class="form-label">Price:</label>
      <input
        type="number"
        id="price"
        name="price"
        required
        class="form-control"
      /><br />

      <label for="country" class="form-label">Country:</label>
      <input
        type="text"
        id="country"
        name="country"
        required
        class="form-control"
      /><br />

      <label for="location" class="form-label">Location:</label>
      <input
        type="text"
        id="location"
        name="location"
        required
        class="form-control"
      /><br />

      <button class="btn btn-dark" type="submit">Create Listing</button>
      <br />
    </form>
  </div>
</div>
