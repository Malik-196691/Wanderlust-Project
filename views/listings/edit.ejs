<% layout('layouts/broilerplate') %>

<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-lg-7 col-md-9 col-12">
      <div class="card shadow-lg border-0 rounded-4">
        <div
          class="card-header bg-dark text-white text-center py-3 rounded-top-4"
        >
          <h4 class="mb-0">Edit Listing</h4>
        </div>

        <div class="card-body p-4">
          <form
            class="needs-validation"
            action="/listings/<%= listing._id %>?_method=PUT"
            method="post"
            enctype="multipart/form-data"
            novalidate
          >
            <!-- ✅ Title -->
            <div class="form-floating mb-3">
              <input
                type="text"
                id="title"
                name="title"
                class="form-control rounded-3"
                value="<%= listing.title %>"
                required
              />
              <label for="title">Title</label>
            </div>

            <!-- ✅ Description -->
            <div class="form-floating mb-3">
              <textarea
                id="description"
                name="description"
                class="form-control rounded-3"
                style="height: 100px"
                required
              >
<%= listing.description %></textarea
              >
              <label for="description">Description</label>
            </div>

            <!-- ✅ Current Image Preview -->
            <div class="mb-3 text-center">
              <p class="fw-semibold mb-2">Current Image</p>
              <img
                src="<%= originalImageUrl %>"
                alt="Current Listing Image"
                class="img-fluid rounded-3 shadow-sm"
                style="max-height: 150px"
              />
            </div>

            <!-- ✅ Upload New Image -->
            <div class="mb-3">
              <label for="imageUrl" class="form-label fw-semibold"
                >Upload New Image</label
              >
              <input
                type="file"
                id="imageUrl"
                name="image"
                class="form-control rounded-3"
              />
            </div>

            <!-- ✅ Price -->
            <div class="form-floating mb-3">
              <input
                type="number"
                id="price"
                name="price"
                class="form-control rounded-3"
                value="<%= listing.price %>"
                required
              />
              <label for="price">Price</label>
            </div>

            <!-- ✅ Country -->
            <div class="form-floating mb-3">
              <input
                type="text"
                id="country"
                name="country"
                class="form-control rounded-3"
                value="<%= listing.country %>"
                required
              />
              <label for="country">Country</label>
            </div>

            <!-- ✅ Location -->
            <div class="form-floating mb-4">
              <input
                type="text"
                id="location"
                name="location"
                class="form-control rounded-3"
                value="<%= listing.location %>"
                required
              />
              <label for="location">Location</label>
            </div>

            <!-- ✅ Buttons -->
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-dark btn-lg rounded-3">
                Update Listing
              </button>

              <a
                href="/listings/<%= listing._id %>"
                class="btn btn-outline-secondary rounded-3"
              >
                Cancel
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
